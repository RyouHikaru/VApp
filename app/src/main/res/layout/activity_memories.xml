<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/memoryHintTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:fontFamily="@font/fredericka_the_great"
        android:paddingTop="30sp"
        android:paddingBottom="30sp"
        android:text="Scroll and click on an image to view moment"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="150sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/anime" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="match_parent"
                android:layout_height="175sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/cat" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="match_parent"
                android:layout_height="145sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/comsci" />

            <ImageView
                android:id="@+id/img4"
                android:layout_width="match_parent"
                android:layout_height="175sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/family" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="300sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/friends_1" />

            <ImageView
                android:id="@+id/img6"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/parents" />

            <ImageView
                android:id="@+id/img7"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/husky" />

            <ImageView
                android:id="@+id/img8"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/laptop" />

            <ImageView
                android:id="@+id/img9"
                android:layout_width="match_parent"
                android:layout_height="150sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/fried_chicken" />

            <ImageView
                android:id="@+id/img10"
                android:layout_width="match_parent"
                android:layout_height="260sp"
                android:paddingBottom="20sp"
                app:srcCompat="@drawable/milktea" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/memoriesReturnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/selector_button"
        android:fontFamily="@font/fredericka_the_great"
        android:text="Return" />
</LinearLayout>