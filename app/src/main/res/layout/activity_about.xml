<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1">

    <ImageView
        android:id="@+id/dp"
        android:layout_width="217dp"
        android:layout_height="164dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dp" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/selector_button"
        android:fontFamily="@font/fredericka_the_great"
        android:text="Return"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:layout_width="294dp"
        android:layout_height="324dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dp">

        <TextView
            android:id="@+id/basicInfoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredericka_the_great"
            android:text="Basic Information"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/studId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredericka_the_great"
            android:paddingLeft="25sp"
            android:paddingTop="10sp"
            android:text="Student ID: 201810374"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredericka_the_great"
            android:paddingLeft="25sp"
            android:text="Name: Carl James M. Reblora"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/courseTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredericka_the_great"
            android:paddingLeft="25sp"
            android:text="Course: BSCSSE"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/skillsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fredericka_the_great"
            android:paddingTop="25sp"
            android:paddingBottom="10sp"
            android:text="Skills"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/skill1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:checked="true"
            android:enabled="false"
            android:fontFamily="@font/fredericka_the_great"
            android:text="Programming"
            android:textColor="#FFFFFF"
            android:textSize="14.5sp" />

        <CheckBox
            android:id="@+id/skill2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:checked="true"
            android:enabled="false"
            android:fontFamily="@font/fredericka_the_great"
            android:text="Ability to adapt in the situation"
            android:textColor="#FFFFFF"
            android:textSize="14.5sp" />

        <CheckBox
            android:id="@+id/skill3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:checked="true"
            android:enabled="false"
            android:fontFamily="@font/fredericka_the_great"
            android:text="Professional late sleeper"
            android:textColor="#FFFFFF"
            android:textSize="14.5sp" />

        <CheckBox
            android:id="@+id/skill4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:checked="true"
            android:enabled="false"
            android:fontFamily="@font/fredericka_the_great"
            android:text="Advanced Microsoft Office skills"
            android:textColor="#FFFFFF"
            android:textSize="14.5sp" />

        <CheckBox
            android:id="@+id/skill5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0sp"
            android:checked="true"
            android:enabled="false"
            android:fontFamily="@font/fredericka_the_great"
            android:text="Multi-lingual"
            android:textColor="#FFFFFF"
            android:textSize="14.5sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>